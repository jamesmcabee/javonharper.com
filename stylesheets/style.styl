black = #444
orange = #FF3333

textColor = white
textHoverColor = white
selectionColor = orange
headerColor = white

serifFonts = 'Roboto Slab', Georgia, serif
sansSerifFonts = 'Istok Web', Helvetica, sans-serif

html
  height 100%
  min-height 100%
  overflow hidden
  font-size 62.5%
  box-shadow inset 0 20px 60px -20px #000000

body
  min-height 100%
  color textColor
  font-weight: lighter
  background-color: #000
  background-attachment fixed
  background-image url('../img/background.png')
  background-repeat no-repeat
  background-size  cover
  background-position center

h1::selection, p::selection, a::selection
  color white
  background orange

.content
  margin 5em 20% 
  padding 2em
  background-color rgba(23, 26, 29, 0.2)

h1
  color headerColor
  font-family sansSerifFonts
  font-size 3.7em
  letter-spacing 0.1em
  margin-top 0
p 
  font-family serifFonts
  font-size 2.5em

p.contact
  margin-top 2em
  text-align center

  a
    border 2px solid white
    border-radius 4px
    padding 0.5em
    transition all 0.2s ease

    &:hover
      color #514031
      text-decoration none
      background white

a
  text-decoration none
  font-weight bold
  color textColor
  letter-spacing 0.05em

  &:hover
    color textHoverColor
    text-decoration underline
